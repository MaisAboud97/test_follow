<odoo>
  <data>
<!-- add auto excute and action type -->
    <record model="ir.ui.view" id="view_followup_level-form_inherited">
          <field name="name">Follow-up</field>
          <field name="model">followup.line</field>
          <field name="inherit_id" ref="om_account_followup.view_om_account_followup_followup_line_form"/>
          <field name="arch" type="xml">
              <xpath expr="//form" position="inside">
                <group string="Options">
                        <field name="auto_execute"/>
                    </group>
              </xpath>
              <xpath expr="//field[@name='manual_action_responsible_id']" position="after">
                 <field name="manual_action_type_id"/>
              </xpath>
              <xpath expr="//field[@name='manual_action']" position="attributes">
                <attribute name="attrs">{'invisible':[('auto_execute', '=', True)]}</attribute>
              </xpath>
              <xpath expr="//label[@for='manual_action']" position="attributes">
                <attribute name="attrs">{'invisible':[('auto_execute', '=', True)]}</attribute>
              </xpath>
          </field>
    </record>
  </data>
</odoo>